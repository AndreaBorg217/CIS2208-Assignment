<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CIS2208_Assignment"
        tools:targetApi="31">
        <activity
            android:name=".DifficultyScores"
            android:exported="false"
            android:label="@string/title_activity_difficulty_scores" />
        <activity
            android:name=".CategoryScores"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".ExitActivity"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".GameActivity"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".CategorySelection"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".DifficultySelection"
            android:exported="false"
            android:screenOrientation="sensor"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>